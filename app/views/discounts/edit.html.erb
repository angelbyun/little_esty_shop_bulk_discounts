<%= form_with url: "/merchant/#{@merchant.id}/discounts/#{@discount.id}/edit", method: :patch, local: true do |form| %>
<%= form.label :item_quantity, "Item Quantity" %>
<%= form.text_field :item_quantity %>
<%= form.label :discount, "Discount" %>
<%= form.text_field :discount %>
<%= form.submit "Update Discount" %>
<% end %>